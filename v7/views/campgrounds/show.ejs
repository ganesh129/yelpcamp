<% include ../partials/header %> 
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">YelCamp</p>
            <div class="list-group">
                <li class="list-group-item">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
                
            </div>
        </div>
       
         <div class="col-md-9">
             <div class="thumbnail">
             <img class="image-responsible" src="<%=campground.image%>">
             <div class="caption-full">
             <h4 class="pull-right">rs 10.00</h4>
             <h1><a><%= campground.name %></a></h1>
             <p><%=campground.description%></p>
              <p><%=campground.author.username%></p>
             
             
             
          </div>
          </div>
          <div class="well">
              <div class="text-right">
                   <p>
                     <a class="btn btn-danger" href="/campgrounds/<%=campground._id%>/comments/new">Add new Comment</a>
              </p>
              </div>
              <% campground.comments.forEach(function(comment){%>
              <div class="row">
                  <div class="col-md-12">
                  <strong><%= comment.author.username %></strong>    
                      <span class="pull-right">10 days ago</span>
                      <p>
                      <%=comment.text%>
                      </p>
        </div>
        </div>
         
<% })%>

             
              </div>
         </div>
    </div>
    </div>

<% include ../partials/footer %>